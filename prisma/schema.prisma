// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// -----------------------------------------------------------------------------
// USER MANAGEMENT
// -----------------------------------------------------------------------------
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workflows   Workflow[]
  
  // We use Cascade here to ensure that deleting a User wipes their keys.
  // In enterprise envs, "Soft Deletes" are preferred, but Cascade is fine for MVP.
  connections Connection[]
}

// -----------------------------------------------------------------------------
// OAUTH CREDENTIAL STORAGE
// SECURITY NOTE: Storing tokens as plain text is risky. 
// In production, encrypt these strings (AES-256) at the app layer before saving.
// -----------------------------------------------------------------------------
model Connection {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  provider    String   // "google", "slack", "notion"
  accessToken String
  refreshToken String?
  expiresAt   Int?     // Unix timestamp

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, provider]) // One Google connection per user
}

// -----------------------------------------------------------------------------
// WORKFLOW DEFINITIONS
// -----------------------------------------------------------------------------
model Workflow {
  id          String         @id @default(uuid())
  userId      String
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name        String
  description String?
  status      WorkflowStatus @default(DRAFT)
  
  nodes       WorkflowNode[]
  executions  ExecutionLog[]

  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

enum WorkflowStatus {
  DRAFT
  ACTIVE
  PAUSED
}

// -----------------------------------------------------------------------------
// WORKFLOW NODES (The Logic)
// Pattern: Doubly Linked List (Linear) via parentId/childId
// -----------------------------------------------------------------------------
model WorkflowNode {
  id            String   @id @default(uuid())
  workflowId    String
  workflow      Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  type          NodeType // TRIGGER or ACTION
  connectorType String   // "gmail-new-email", "slack-send-message"
  config        Json     // Stores { channelId: "...", subject: "..." }

  positionX     Int      @default(0)
  positionY     Int      @default(0)
  
  // Linear Linking Logic
  parentId      String?  @unique 
  childId       String?  @unique

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum NodeType {
  TRIGGER
  ACTION
}

// -----------------------------------------------------------------------------
// EXECUTION LOGS (The Audit Trail)
// -----------------------------------------------------------------------------
model ExecutionLog {
  id          String          @id @default(uuid())
  workflowId  String
  workflow    Workflow        @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  
  status      ExecutionStatus @default(PENDING)
  startedAt   DateTime        @default(now())
  completedAt DateTime?
  
  triggerData Json?           // The webhook payload or email data that started it
  resultData  Json?           // The final output of all steps
  error       String?         // Capture error message if failed

  @@index([workflowId])
}

enum ExecutionStatus {
  PENDING
  SUCCESS
  FAILED
}
